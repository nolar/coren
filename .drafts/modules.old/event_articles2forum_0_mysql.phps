	$article = "'" . mysql_real_escape_string($article, $handle) . "'";
	$sql =
	"
		replace into {$table_sync} (`topic`, `article`)
		values ({$topic}, {$article})
	";
//???	core::event('query', "Select number of files in database.", array('query'=>$sql));

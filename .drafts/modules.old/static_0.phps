class static_0 extends module
{

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

protected $item;

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

public function __construct ($configs)
{
	parent::__construct($configs);
	$this->item = core::find_scalar(array($configs), array('item'), 'content');
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

public function main ($args)
{
	$item = core::find_scalar(array($args), array('item'), $this->item);
	if (!isset($item)) return;
	echo core::template($item);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
}

